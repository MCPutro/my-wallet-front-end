<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/input_one_field_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Background"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/titillium_web_regular"
                android:layout_margin="15dp"
                />


            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                >
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    >
                    <ImageButton
                        android:id="@+id/wallet_background_card_1"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_2"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_3"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"

                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_4"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_5"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_6"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_7"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_8"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_9"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_10"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_11"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"

                        />
                    <ImageButton
                        android:id="@+id/wallet_background_card_12"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/test_text"
                        />
                </GridLayout>

            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/card_background_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#FD6565"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="?attr/borderlessButtonStyle"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>