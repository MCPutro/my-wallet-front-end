<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/newActivityBody"
    tools:context=".Activity_New"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="10dp"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/create_history_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="New activity"
            app:titleTextColor="@android:color/black"
            android:background="@color/toolbar"
            app:menu="@menu/menu_save"
            app:navigationIcon="@drawable/ic_round_arrow_back_24_black"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/create_new_history_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/tab"
        app:tabTextColor="@android:color/black"
        app:tabSelectedTextColor="@android:color/black"
        app:tabIndicator="@drawable/tab_selected"
        app:tabIndicatorColor="@color/colorTabSelected"
        app:tabIndicatorGravity="stretch"
        app:tabRippleColor="@null"
        app:tabGravity="fill"
        app:tabMode="auto"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:tabMinWidth="117dp"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INCOME"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXPENSE"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSFER"
            />
    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:id="@+id/activity_new_layout_inex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Amount"
                android:textStyle="bold"
                android:textColor="#939BAC"
                android:textSize="15sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_history_nominal_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/create_history_nominal_calc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:errorEnabled="true"
                    app:boxBackgroundColor="@color/formField"
                    app:boxStrokeColor="@drawable/selector_box_stroke_color"
                    app:boxStrokeWidth="2dp"
                    app:hintEnabled="false"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/create_history_nominal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#4CAF50"
                        android:maxLines="1"
                        android:editable="false"
                        android:text="0"
                        android:hint="@string/test_text"
                        android:textColorHint="@color/transparent"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                        android:id="@+id/create_history_nominal_calc"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentEnd="true"
                        android:background="@mipmap/ic_calc_1"
                        android:contentDescription="@string/test_text"
                        />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="#939BAC"
                android:textSize="15sp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_history_category_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                app:boxBackgroundColor="@color/formField"
                app:boxStrokeColor="@drawable/selector_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >

                <AutoCompleteTextView
                    android:id="@+id/create_history_category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:editable="false"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:hint="@string/test_text"
                    android:textColorHint="@color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Wallet"
                android:textStyle="bold"
                android:textColor="#939BAC"
                android:textSize="15sp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_history_wallet_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                app:boxBackgroundColor="@color/formField"
                app:boxStrokeColor="@drawable/selector_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >

                <AutoCompleteTextView
                    android:id="@+id/create_history_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:editable="false"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:hint="@string/test_text"
                    android:textColorHint="@color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#939BAC"
                android:textSize="15sp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_history_date_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/formField"
                app:boxStrokeColor="@drawable/selector_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_history_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:hint="@string/test_text"
                    android:textColorHint="@color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Desc (optional)"
                android:textStyle="bold"
                android:textColor="#939BAC"
                android:textSize="15sp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_history_desc_layout"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/formField"
                app:boxStrokeColor="@drawable/selector_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_history_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:hint="@string/test_text"
                    android:textColorHint="@color/transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/activity_new_layout_trf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Source Wallet"
            android:textAlignment="center"
            android:textColor="#929AAC"
            android:textSize="15sp"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/trf_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transferField"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/trf_from_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_question"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/trf_from_nominal"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/trf_from_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_condensed_bold"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/trf_from_id"
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:maxLines="1"
                            android:ellipsize="middle"
                            android:textColor="#929AAC"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/trf_from_nominal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_condensed_light"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Wallet"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#929AAC"
            android:textSize="15sp"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/trf_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transferField"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/trf_to_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_question"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="10dp"
                    >

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/trf_to_nominal"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/trf_to_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_condensed_bold"
                                android:gravity="center"
                                android:textSize="18sp"
                                />

                        <TextView
                                android:id="@+id/trf_to_id"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:textColor="#929AAC"
                                android:maxLines="1"
                                android:ellipsize="middle"
                                android:textSize="15sp"

                                />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/trf_to_nominal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_condensed_light"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="#7A8398"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                android:textColor="#BCC4DF"
                android:textSize="15sp"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/trf_nominal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:hint="0"
                android:inputType="number"
                android:textColor="#7E879C"
                android:textSize="20sp"
                android:textStyle="bold"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee"
            android:textColor="#7A8398"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                android:textColor="#BCC4DF"
                android:textSize="15sp"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/trf_nominal_fee"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:hint="0"
                android:inputType="number"
                android:textColor="#7E879C"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>