<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customEditText" parent="Theme.MyWallet">
        <item name="colorControlActivated">@color/primerLight</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <!-- toolbar font-->
    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- font tab  -->
    <style name="font_tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- notif pop up material io -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/statusBarColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/showMoreBtn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#F74D74</item>
        <item name="rippleColor">#F74D74</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#61D1D5</item>
        <item name="rippleColor">#61D1D5</item>
    </style>
    <!-- notif pop up material io -->
</resources>